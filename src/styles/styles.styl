@lost flexbox flex
* { box-sizing: border-box; }

@require 'extras/variables'
////@require 'typographic'
@require 'rupture'
@require 'nib'

normalize-html5()

// Rupture - Breaking Points
rupture.scale = 0 320px 480px 768px 1024px 1180px
rupture.scale-names = 'xs' 'sm' 'md' 'lg' 'xl'

.btn
  border-radius: 22px
  color: #fff
  display: inline-block
  font-weight: $fw__400
  line-height: 44px
  text-decoration: none
  width: 162px

.btn__green
  background: $btn__green-bg
  font-size: $btn__green-fs
  padding: 0 50px

body
  font-family: $base__fntfml
  margin: 0

////////////////////// Header //////////////////////
header
  background: url('../img/top-bg.jpg') no-repeat center center
  background-size: cover
  lost-utility: clearfix

  section
    clearfix()
  // Top
  .top
    padding: 46px 70px 0 70px
    lost-column: 1/1

    .top__logo
      float: left

    .top__right
      float: right
      padding-top: 10px

      .top__right__left
        position: relative
        float: left

        input
          background: #343c48
          border: none
          border-radius: 22px
          color: $input__search-clr
          font-size: 14px
          height: 44px
          line-height: 44px
          padding: 0 40px 0 20px
          position: absolute
          top: 0
          right: 0
          width: 262px

        &:focus
          outline: none

        i
          color: #b2b2b2
          position: absolute
          top: 13px
          right: 19px

      .top__right__right
        color: #fff
        float: right
        margin-left: 23px

        .btn__magenta
          background: $btn__magenta-bg
          font-size: $btn__magenta-fs
          padding: 0 30px

        i
          margin-left: 23px
          font-size: 20px

  //End Top

  // Header Content
  .top__content
    color: #fff
    lost-center: $container__width $gutter__l
    padding-bottom: 100px

    +above(lg)
      padding-bottom: 244px

    div
      width: auto
      margin-left: auto

      h1
        font-size: 34px

        +above(lg)
          font-size: 70px


//End Header Content

//////////////////// End Header /////////////////////

/////////////////////// Main ////////////////////////

main
  // App Demo
  .app-demo
    background: #835fa8

    div
      lost-center: $container__width $gutter__l

      div
        lost-column: 1/1 1 0
        flex-direction: column

        color: #fff
        padding-top: 57px
        padding-left: 0
        padding-right: 0

        +above(lg)
          lost-column: 1/2

        h2
          margin: 0

          +above(lg)
            font-size: 40px
            font-weight: 300
            line-height: 50px

        p
          font-size: 16px
          font-weight: 400
          line-height: 26px

        img
          width: 100%

          +below(830px)
            margin-top: -30px

          +above(830px)
            margin-top: -130px


// features
  .features
    background: #f4f8fb

    div
      lost-center: $container__width $gutter__l

      div
        lost-column: 1/1 1 0
        flex-direction: column
        padding: 30px 0

        +above(md)
          lost-column: 1/2

        +above(lg)
          lost-column: 1/3


        h2, h4
          margin: 0
          font-weight: 300

        h2
          color: #2b303b
          font-size: 30px
          line-height: 55px

        h4
          color: #696f7c


  // design
  .design
    background: #232831
    color: #fff

    div
      lost-center: $container__width $gutter__l

      div
        lost-column: 1/1 1 0
        flex-direction: column
        padding: 30px 0
        text-align: center

        h2
          font-weight: 300

        p
          font-weight: 400

        &:last-child
          padding: 0
        img
          width: 100%


  // design features
  .design__features
    background-color: #2b303b
    color: #fff

    div
      lost-center: $container__width $gutter__l
      padding-top: 30px
      div
        lost-column: 1/1 1 0
        flex-direction: column
        padding: 0 0 30px 0

        +above(lg)
          lost-column: 1/2

        +above(xl)
          lost-column: 1/4

        img
          width: 30px
          height: 30px
          margin-bottom: 15px

          +above(xl)
            width: 45px
            height: 45px

        h3
          font-weight: 300
          margin: 0
          span
            color: #3a4d60

        p
          color: #9da5b0
          font-size: 14px

//////////////////// App Features /////////////////////
  .app__features-connectivity
    background: #e9eef1
    color: #fff

    div
      lost-center: 100% $gutter__l

      div
        lost-column: 1/1
        padding-left: 0
        padding-right: 0

        +above(lg)
          lost-column: 1/2 1 0


        h2
          color: #2b303b
          font-size: 40px
          font-weight: 300
          line-height: 55px

          .cloud
            background: url('../img/cloud.png') no-repeat center center
            display: block
            float: left
            height: 31px
            margin: 13px 10px 0 0
            width: 43px

        h4
          color: #696f7c
          font-size: 20px
          font-weight: 300
          line-height: 30px

        p
          color: #44484f
          font-size: 14px
          line-height: 28px

        img
          width: 100%
          height: 100%


  .app__features-demo
    background: #835fa8
    color: #fff

    div
      lost-center: 100% $gutter__l

      div
        lost-column: 1/1
        padding-left: 0
        padding-right: 0

        +above(lg)
          lost-column: 1/2 1 0

        blockquote
          margin: 30px 0

          +above(lg)
            margin: 30px

          span
            font-size: 12px

          p
            font-size: 32px
            font-weight: 300
            font-style: italic
            line-height: 44px
            margin-top: 0

          footer
            img
              width: 50px
              height: 50px
              border-radius: 25px
              float: left

            cite
              display: block
              font-size: 15px
              font-style: normal
              font-weight: 300
              line-height: 40px
              margin-left: 20px
              //margin-top: -15px
              float: left

        img
          width: 100%
          height: 100%

  .phone__app
    color: #83969f;
    div
      lost-center: 100% $gutter__l
      div
        lost-column: 1/1
        padding-left: 0
        padding-right: 0

        +above(lg)
          lost-column: 1/2 1 0

        img
          width: 100%
          height: 100%

        article

          +above(lg)
            padding-right: 30px

          h3
            color: #232323
            font-size: 23px
            font-weight: 300
            line-height: 28px

          p
            font-size: 14px
            font-weight: 400
            line-height: 25px

          .comments
            float: left
            p
              font-size: 12px
              font-weight: 600
              line-height: 46px
              span
                font-size: 30px
                font-weight: 300
                line-height: 40px
                padding-right: 30px

  .app__reviews
    background: url('../img/blocks-bg.jpg') no-repeat center center
    background-size: cover
    padding-bottom: 145px
    color: #fff

    +above(lg)
      padding-bottom: 292px


    div
      lost-center: 100% 0

      div
        lost-column: 1/1
        &:first-child
          background: #835fa8

        +above(lg)
          lost-column: 1/2 1 0

        blockquote
          margin: 30px

          span
            font-size: 12px

          p
            font-size: 32px
            font-weight: 300
            font-style: italic
            line-height: 44px
            margin-top: 0

          footer
            img
              width: 50px
              height: 50px
              border-radius: 25px
              float: left

            cite
              display: block
              font-size: 15px
              font-style: normal
              font-weight: 300
              line-height: 40px
              margin-left: 20px
              //margin-top: -15px
              float: left


////////////////////// Footer //////////////////////

footer.main-footer
  background-color: #1a2124
  color: #f6f7fa
  padding: 50px 30px

  font-size: 13px
  line-height: 24px
  h4
    margin: 0
    font-weight: 600
  p
    font-weight: 400

  ul
    margin-left: 0
    margin-bottom: 30px
    padding-left: 0

    li
      list-style none


  .main-footer-outer
    lost-center: $container__width
    margin-top: 30px

    .main-footer-content
      lost-column: 1/1

      +above(md)
        lost-column: 1/2

      .footer__menu
        lost-column: 1/1
        margin-top: 30px

        div
          lost-column: 1/2 1 0

          &:last-child
            float: left
            margin-bottom: 30px

          +above(lg)
            lost-column: 1/3


    .subscribe__newsletter
      lost-column: 1/1

      +above(lg)
        lost-column: 1/2

      h4
        margin-bottom: 20px

      form
        lost-utility: clearfix

        input[type="text"]
          color: #2b2e38
          height: 55px
          width: 80%
          float: left
          font-size: 24px
          font-weight: 300

        a
          background-color: #835fa8
          color: #fff
          display: block
          float: left
          font-size: 24px
          font-weight: 100
          height: 55px
          line-height: 55px
          width: 19.5%
          text-align: center

