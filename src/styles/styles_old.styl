@require 'extras/variables'
@require 'typographic'
@require 'rupture'
@require 'nib'

normalize-html5()

typographic()

// Rupture - Breaking Points
rupture.scale = 0 320px 480px 768px 1024px 1180px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl'

html
  font-family: $base__fntfml

  body
    margin: 0


  .btn
    border-radius: 22px
    color: #fff
    display: inline-block
    font-weight: $fw__400
    line-height: 44px
    text-decoration: none
    width: auto

  .btn__green
    background: $btn__green-bg
    font-size: $btn__green-fs
    padding: 0 50px


// Section Top
section.top
  lost-center: 1920px
  background: url('../img/top-bg.jpg') no-repeat center center fixed
  background-size: cover

  color: $base__fntclr


  // Section Top -- Header
  header
    lost-utility: clearfix
    margin: 46px 70px 0 82px

    .logo
      lost-column: 1/3
      text-align: left

    div
      lost-column: 2/3
      text-align: right

      .input__search
        position: absolute
        top: 0
        right: 0
        background: #343c48
        border-radius: 22px
        color: $input__search-clr
        height: 44px
        width: 262px
        //margin-right: 50px

        i.fa-search
          position: absolute
          top: 10px
          right: 10px

        .btn__magenta
          background: $btn__magenta-bg
          font-size: $btn__magenta-fs
          padding: 0 30px


  // Section Top -- Hero
  .container
    lost-center: $container__width $container__gutter__s
    lost-utility: clearfix

    .hero
      lost-utility: clearfix
      margin-bottom: 212px
      margin-left: 0
      margin-right: 0

      +above(2)
        margin-left: 15%
        margin-right: 4.5%

        h1
          font-size: $fs__40
          font-weight: $fw__300
          line-height: 50px
          color: inherit

        p
          font-size: $fs__16
          font-weight: $fw__400
          line-height: 30px

      +above(4)
        margin-left: 39%
        margin-right: 9%

        h1
          font-size: $fs__70
          font-weight: $fw__300
          line-height: 90px
          color: inherit

        p
          font-size: $fs__18
          font-weight: $fw__400
          line-height: 30px

